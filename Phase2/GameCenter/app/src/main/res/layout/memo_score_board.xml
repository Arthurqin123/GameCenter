<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoreboard_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/buttonAccept"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="53dp"
        android:text="@string/accept" />

    <ListView
        android:id="@+id/memoScoreBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="218dp"
        android:fillViewport="true" />

    <TextView
        android:id="@+id/memoCurrentPlayer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/empty" />


    <TextView
        android:id="@+id/memoPlayerTop3x1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:text="playerscore1" />

    <TextView
        android:id="@+id/memoPlayerTop3x2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:text="playerscore2" />

    <TextView
        android:id="@+id/memoPlayerTop3x3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        android:text="@string/playerscore3" />

    <EditText
        android:id="@+id/acceptText"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonAccept"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/_3"
        tools:ignore="LabelFor" />

    <Switch
        android:id="@+id/memoMode"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/buttonAccept"
        android:layout_centerHorizontal="true"
        android:text="@string/hard_mode" />

</RelativeLayout>